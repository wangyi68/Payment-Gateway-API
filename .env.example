# TheSieuToc API Configuration
THESIEUTOC_API_KEY=your_api_key_here

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Database (SQLite)
DATABASE_PATH=./data/database.sqlite

# Ngrok (optional - for public callback URL)
# Get token at: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=
# Static domain (optional): https://dashboard.ngrok.com/cloud-edge/domains
NGROK_DOMAIN=

# Redis (optional - for queue management)
# If not set, in-memory queue will be used
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Scheduler
# Set to false to disable scheduled tasks
SCHEDULER_ENABLED=true

# Cleanup Configuration (days)
CLEANUP_TRANSACTION_DAYS=90
CLEANUP_LOG_DAYS=30
CLEANUP_BLACKLIST_DAYS=180

# Validation
# Hours to check for duplicate card submissions
DUPLICATE_CHECK_HOURS=24

# Logging
LOG_LEVEL=info
