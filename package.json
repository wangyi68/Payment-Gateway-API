{
  "name": "payment-gateway-api",
  "version": "1.0.0",
  "description": "Payment Gateway - Card (TheSieuToc) + Bank/QR (PayOS)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:export": "tsx src/scripts/export-db.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist"
  },
  "keywords": [
    "thesieutoc",
    "card",
    "topup",
    "api"
  ],
  "author": "Converted from PHP",
  "license": "MIT",
  "dependencies": {
    "@ngrok/ngrok": "^1.7.0",
    "@payos/node": "^2.0.4",
    "axios": "^1.6.7",
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.9.2",
    "node-cron": "^4.2.1",
    "typescript-eslint": "^8.54.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
